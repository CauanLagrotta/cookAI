generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(dbgenerated("concat('USR-', md5(random()::text))"))
  name       String?
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  receipts Receipt[]
}

model Receipt {
  id                 String @id @default(dbgenerated("concat('REC-', md5(random()::text))"))
  name               String
  ingredients        String
  preparation_method String
  created_at DateTime @default(now())
  
  user_id String
  user    User   @relation(fields: [user_id], references: [id])
}
